<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10 # means the space between the widgets and the App-frame
        spacing: 10 # means the area between the widgets

        Camera:
            id: camera
            resolution: (640, 480)
            play: False  # default play value is True,that's why must explicitly change!
            # texture: None  # this is the default value!
            opacity: 0 # the camera widget will be invisible. default value is one.
        Button:
            id: power_btn
            size_hint_y: 0.1
            text: 'Start Camera' # this is the default text value
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Button:
            id: capt_btn
            size_hint_y: 0.1
            text: 'Capture'
            on_press: root.capture()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'



<ImageScreen>:
    canvas.before:
        Color:
            rgba: (0.360, 0.501, 0.321, 1)
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/psychedelic.jpg'

    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: my_image
            size_hint_y: 0.7
        Button:
            id: link_btn
            size_hint_y: 0.1
            text: 'Show your friends who is the prettiest of them all. And start therapy today. Fucking narcissist.'
            on_press: root.create_link()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'

        Label:
            id: label
            size_hint_y: 0.1
            text: '' # it will be updated with the url
        GridLayout:  # this is a child of the first GridLayout
            size_hint_y: 0.1
            cols: 2
            padding: 10
            spacing: 10
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'

            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'



<RootWidget>:
    canvas.before:
        Color:     # change app background color
            rgba: (0.615, 0.639, 0.941, 1) # a means transparency. with 1 it is not ata ll transparent
        Rectangle:          # we have to drow a rectangle
            pos: self.pos     # self points to the root widget, and pos is the position of the root widget
            size: self.size   # we assign the background color to have the size and position of the app
            source: 'images/witch.jpg'


    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'